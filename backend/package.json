    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "fast-check": "^3.23.2",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@fastify/websocket": "^11.2.0",
    "@supabase/supabase-js": "^2.90.1",
    "commander": "^14.0.2",
    "dotenv": "^16.3.0",
    "fastify": "^4.24.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0"

    "format": "prettier --write .",
    "test": "vitest",
    "test:candles": "tsx src/test-candles.ts",
    "test:candles:fresh": "tsx src/test-candles-fresh.ts",
    "test:features": "tsx src/test-repository-features.ts",
    "query:candles": "tsx src/query-candles.ts",
    "gold:setup": "tsx src/test-gold-data.ts",
    "gold:monitor": "tsx src/gold-monitor.ts",
    "query:gold": "tsx src/query-gold.ts",
    "indicators:setup": "tsx src/database/setup-indicators.ts setup",
    "indicators:verify": "tsx src/database/setup-indicators.ts verify",
